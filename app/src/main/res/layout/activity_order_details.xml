<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mowebs.OrderDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backButton"
            android:contentDescription="@string/backbutton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/back"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="89dp"
            android:text="@string/order"
            android:textSize="19sp"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="121dp"
            android:background="#4E4E4E"
            android:id="@+id/order">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="23dp"
                android:text="@string/order"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="23dp"
                android:text="Thank you for choosing us"
                android:textSize="11sp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_check"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/order"
            android:layout_marginTop="61dp"
            android:id="@+id/details">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maps"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="40dp"
                android:text="@string/order"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/fahmi_rizky"
                android:layout_width="322dp"
                android:layout_height="101dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="@string/customer"
                android:textAppearance="@style/customer"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/alphard"
            android:layout_alignTop="@+id/details"
            android:id="@+id/alphard">
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="425dp"
            app:srcCompat="@drawable/detail_order" />

        <androidx.appcompat.widget.AppCompatButton
            android:contentDescription="@string/csButton"
            android:id="@+id/csButton"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginTop="545dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/customer_service"/>

        <androidx.appcompat.widget.AppCompatButton
            android:contentDescription="@string/ratingButton"
            android:id="@+id/ratingButton"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginTop="545dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/rate"/>

    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:contentDescription="@string/bookAgainButton"
        android:id="@+id/bookAgainButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="625dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button"
        android:text="Book Again"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>