<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/back"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="89dp"
            android:text="@string/order"
            android:textSize="19sp"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="121dp"
            android:background="#4E4E4E"
            android:id="@+id/order">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="23dp"
                android:text="@string/order"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="23dp"
                android:text="Thank you for choosing us"
                android:textSize="11sp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_check"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/order"
            android:layout_marginTop="61dp"
            android:id="@+id/details">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maps"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="40dp"
                android:text="@string/order"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/fahmi_rizky"
                android:layout_width="322dp"
                android:layout_height="101dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="@string/customer"
                android:textAppearance="@style/customer"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/alphard"
            android:layout_alignTop="@+id/details"
            android:id="@+id/alphard">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/bg_pro"
            android:layout_alignTop="@+id/alphard">
            <TextView
                android:id="@+id/payment_met"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:text="@string/payment_met"
                android:textAppearance="@style/payment_met"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/cash"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="@string/cash"
                android:textAppearance="@style/cash"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/pay"
            android:layout_marginTop="55dp"
            android:background="@drawable/bg_pro">
            <TextView
                android:id="@+id/order_id_a2"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:text="@string/order_id_a2"
                android:textAppearance="@style/order_id_a2"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/order_time_"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="31dp"
                android:text="@string/order_time_"
                android:textAppearance="@style/order_time_"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:text="@string/pay_time_"
                android:textAppearance="@style/order_time_"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="67dp"
                android:text="@string/ship_time_"
                android:textAppearance="@style/order_time_"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="85dp"
                android:text="@string/completed_time_"
                android:textAppearance="@style/order_time_"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line"
                android:layout_marginTop="105dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="22dp"
                android:layout_marginTop="113dp"
                android:layout_marginLeft="78dp" android:background="@drawable/c_service"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="111dp"
                android:layout_height="22dp"
                android:layout_marginTop="113dp"
                android:layout_marginLeft="198dp"
                android:background="@drawable/rate"/>

        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="650dp"
            android:background="@drawable/button"
            android:text="Book Again"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>