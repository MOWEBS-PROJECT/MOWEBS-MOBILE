<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataActivity"
    android:background="@drawable/bg_profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backButton"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@null"
                android:layout_marginLeft="7dp"
                android:drawableTop="@drawable/back"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Personal Data"
                android:textSize="25dp"
                android:layout_marginLeft="60dp"
                android:textColor="#1F1F1F"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:id="@+id/editTextFullname"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identity Number (KTP)"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:id="@+id/editTextKTP"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Email"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <LinearLayout
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:background="@drawable/frame_input2">
                <Spinner
                    android:paddingLeft="23dp"
                    android:layout_width="299dp"
                    android:layout_height="45dp"
                    android:id="@+id/spinnerGender"
                    android:spinnerMode="dropdown"
                    android:entries="@array/gender"
                    android:theme="@style/SpinnerTheme"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Address"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="299dp"
                android:layout_height="120dp"
                android:padding="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"
                android:gravity="top|start"
                android:inputType="text"
                android:maxLines="999"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateButton"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="end"
            android:background="@drawable/frame_btn_updateprofile"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>