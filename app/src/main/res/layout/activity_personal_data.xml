<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataActivity"
    android:background="@drawable/bg_profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="43dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:drawableTop="@drawable/btn_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Personal Data"
                android:textSize="17dp"
                android:layout_marginTop="-17dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="85dp"
                android:textColor="#1F1F1F"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:text="Muhammad Sukriyatma"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identity Number (KTP)"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:text="100000102002013"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Email"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:text="sukriyatma@gmail.com"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:text="08009876543"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <LinearLayout
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:background="@drawable/frame_input2">
                <Spinner
                    android:paddingLeft="23dp"
                    android:layout_width="299dp"
                    android:layout_height="45dp"
                    android:id="@+id/id_gender"
                    android:spinnerMode="dropdown"
                    android:entries="@array/gender"
                    android:theme="@style/SpinnerTheme"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Address"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:textColor="#606060"/>
            <EditText
                android:layout_width="299dp"
                android:layout_height="60dp"
                android:text="Kampus Cilibende, Bogor Tengah Kota Bogor"
                android:paddingLeft="28dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14dp"
                android:background="@drawable/frame_input2"
                android:textColor="#424242"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="29dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="222dp"
            android:background="@drawable/frame_btn_updateprofile"
            android:text="Update"
            android:textColor="#BFBFBF"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>