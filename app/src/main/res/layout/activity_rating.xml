<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mowebs.RatingActivity"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#1F1F1F"
            android:layout_marginBottom="35dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:id="@+id/id_NamaRating"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="65dp"
                android:text="Muhammad Sukriyatma"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="50dp"
                android:text="Jl. Imam Bonjol No.10, RT.1/RW.7, Babakan, Kota Bogor,  Bogor Tengah, Jawa Barat, ID, 16128"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Merk"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="44dp"
                android:text="Toyota Alphard"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="47dp"
                android:text="2"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Days"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="74dp"
                android:text="Rp300.000"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_input2"
                android:layout_marginLeft="73dp"
                android:text="Rp600.000"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textAlignment="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#7B7B7B" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="61dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#606060"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:background="@drawable/frame_input2"
                android:hint="Enter Your Comment"
                android:layout_marginLeft="33dp"
                android:textColorHint="#A09E9E"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColorHighlight="#424242"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Cancel"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/button_outline"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textAllCaps="false"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirmButton"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Confirm"
                android:background="@drawable/button_rounded"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>