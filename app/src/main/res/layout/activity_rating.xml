<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mowebs.RatingActivity"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="50dp"
                android:text="Fahmi Rizky"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="30dp"
                android:text="Jl. Imam Bonjol No.10, RT.1/RW.7, Babakan, Kota Bogor,  Bogor Tengah, Jawa Barat, ID, 16128"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Merk"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="23dp"
                android:text="Toyota Alphard"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="30dp"
                android:text="2"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Days"
                android:textSize="15dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N Police"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="30dp"
                android:text="B 3276 EC"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="58dp"
                android:text="Rp300.000"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="58dp"
                android:text="Rp600.000"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:background="@drawable/shape"
                android:hint="Enter Your Comment"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/white"
                android:textAlignment="center"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginLeft="5dp"
                android:id="@+id/btn_submit"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>